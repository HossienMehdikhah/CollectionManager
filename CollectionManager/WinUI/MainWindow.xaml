<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="using:CollectionManager.WinUI.Views"
    mc:Ignorable="d">
    <NavigationView
        x:Name="NavView"
        Background="LightGray"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        Loaded="navView_Loaded"
        PaneDisplayMode="Top"
        SelectionChanged="NavView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Feeds" Tag="MainPage" />
            <NavigationViewItem Content="Search" Tag="SearchPage" />
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated" />
    </NavigationView>
</Window>
