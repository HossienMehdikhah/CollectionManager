            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="70*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="TitleTextBlock"
                Grid.Row="0"
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="kiiirrrrrrrrr"
                TextAlignment="Center"
                TextWrapping="NoWrap" />
            <usercontrollers:GameGalleryUserController Grid.Row="1" GameLinkList="{x:Bind ViewModel.GaleryLinkList, Mode=OneWay}" />
            <ScrollViewer Grid.Row="2">
                <StackPanel>
                    <TextBlock
                        Margin="15"
                        FlowDirection="RightToLeft"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
