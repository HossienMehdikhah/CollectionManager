<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="CollectionManager.WinUI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helprs="using:CollectionManager.WinUI.Helprs"
    xmlns:local="using:CollectionManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <NavigationView
        x:Name="NavigationViewControl"
        Background="LightGray"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        PaneDisplayMode="Top"
        SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}">
        <NavigationView.MenuItems>
            <NavigationViewItem helprs:NavigationHelper.NavigateTo="CollectionManager.WinUI.ViewModels.FeedPageViewModel" Content="Feeds" />
            <NavigationViewItem helprs:NavigationHelper.NavigateTo="CollectionManager.WinUI.ViewModels.SearchPageViewModel" Content="Search" />
            <NavigationViewItemSeparator />
            <NavigationViewItem helprs:NavigationHelper.NavigateTo="CollectionManager.WinUI.ViewModels.ListedPageViewModel" Content="Marked" />
        </NavigationView.MenuItems>
        <Grid>
            <Frame x:Name="NavigationFrame" />
        </Grid>
    </NavigationView>
</Page>
